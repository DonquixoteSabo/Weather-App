{
    "extends": [
        "react-app",
        "react-app/jest",
        "plugin:prettier/recommended",
        "prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "endOfLine": "auto",
                "tabWidth": 2,
                "semi": true,
                "singleQuote": true,
                "arrowParens": "avoid",
                "jsxBracketSameLine": false,
                "jsxSingleQuote": true
            }
        ]
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parser": "babel-eslint"
}